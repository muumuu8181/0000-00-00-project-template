{
  "name": "universal-template-system",
  "description": "よっぽどの馬鹿でも使える万能アプリテンプレート - カップラーメン方式",
  "main": "PROTECT/core-system/core/index.ts",
  "scripts": {
    "version:update": "node PROTECT/deployment/tools/version/update.js",
    "cleanup:paint": "node PROTECT/deployment/tools/cleanup/remove-paint-artifacts.js",
    "init:profile": "node PROTECT/deployment/tools/profile/apply.js",
    "check:unused": "knip --config CHANGE/configs/tools/knip.json && ts-prune --project CHANGE/configs/typescript/tsconfig.json && depcruise -v .dependency-cruiser.cjs",
    "test": "vitest run --config CHANGE/configs/build/vitest.config.ts",
    "test:e2e": "playwright test --config CHANGE/configs/build/playwright.config.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "dev": "vite --config CHANGE/configs/build/vite.config.ts",
    "build": "vite build --config CHANGE/configs/build/vite.config.ts",
    "preview": "vite preview --config CHANGE/configs/build/vite.config.ts"
  },
  "keywords": [
    "universal-template",
    "foolproof-setup",
    "firebase-auto-config",
    "copy-buttons",
    "junior-developer-proof",
    "cup-noodles-simplicity",
    "100-developer-compatible",
    "testing",
    "automation",
    "ui-testing",
    "data-storage",
    "jsdom",
    "python",
    "nodejs"
  ],
  "author": "Template Project",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "python": ">=3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muumuu8181/0000-00-00-project-template.git"
  },
  "homepage": "https://github.com/muumuu8181/0000-00-00-project-template",
  "bugs": {
    "url": "https://github.com/muumuu8181/0000-00-00-project-template/issues"
  },
  "version": "0.42",
  "directories": {
    "doc": "VIEW-見るだけ/documentation",
    "test": "CHANGE-変更する/improvements/tests"
  },
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/ui": "^3.2.4",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}