{
  "name": "universal-template-system",
  "description": "よっぽどの馬鹿でも使える万能アプリテンプレート - カップラーメン方式",
  "main": "universal-system/core/universal-template.js",
  "scripts": {
    "version:update": "node tools/version/update.js",
    "cleanup:paint": "node tools/cleanup/remove-paint-artifacts.js",
    "init:profile": "node tools/profile/apply.js",
    "check:unused": "knip && ts-prune && depcruise -v .dependency-cruiser.cjs",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "keywords": [
    "universal-template",
    "foolproof-setup",
    "firebase-auto-config",
    "copy-buttons",
    "junior-developer-proof",
    "cup-noodles-simplicity",
    "100-developer-compatible",
    "testing",
    "automation",
    "ui-testing",
    "data-storage",
    "jsdom",
    "python",
    "nodejs"
  ],
  "author": "Template Project",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "python": ">=3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muumuu8181/0000-00-00-project-template.git"
  },
  "homepage": "https://github.com/muumuu8181/0000-00-00-project-template",
  "bugs": {
    "url": "https://github.com/muumuu8181/0000-00-00-project-template/issues"
  },
  "version": "0.41",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/ui": "^3.2.4",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}